#!/bin/sh
# Easy file extraction
# Credit: http://nparikh.org/notes/zshrc.txt
# Usage: extract <file>

extract() {
    case "$1" in
        *.tar.bz2)   tar -jxvf "$1"                                          ;;
        *.tar.gz)    tar -zxvf "$1"                                          ;;
        *.bz2)       bunzip2 "$1"                                            ;;
        *.gz)        gunzip "$1"                                             ;;
        *.tar)       tar -xvf "$1"                                           ;;
        *.tbz2)      tar -jxvf "$1"                                          ;;
        *.tgz)       tar -zxvf "$1"                                          ;;
        *.pax)       pax -r < "$1"                                           ;;
        *.pax.Z)     uncompress "$1" --stdout | pax -r                       ;;
        *.xz)        xz --keep -d "$1"                                       ;;
        *.zip|*.cbz) unzip "$1"                                              ;;
        *.Z)         uncompress "$1"                                         ;;
        *.ZIP)       unzip "$1"                                              ;;
        *)           printf "'%s' cannot be extracted via extract()\\n" "$1" ;;
    esac
}

extract "$@"
