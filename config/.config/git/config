[alias]
	# Clone.
	sclone = clone --depth=1

	# Diff.
	staged = diff --cached

	# Push.
	pom = push origin master
	poh = push origin head

	# Status/Logging.
	hist = log --graph --oneline --abbrev-commit --all # Show custom graph
	lc = shortlog --summary --numbered # List contributors
	ss = status

	# Reset.
	undo = reset --soft # Undo last commit (affects HEAD only)
	uncommit = reset --soft HEAD^ # Alternative to `undo`
	fuckit = reset --hard # Remove last commit (from HEAD, Index and Working Dir)

	# Submodules.
	subpl = submodule update --init --recursive

	# Show the root directory of the repo
	root = rev-parse --show-toplevel

[color]
	diff = auto
	ui = auto

[color "branch"]
	current = green bold
	local = green
	remote = yellow

[color "diff"]
	frag = magenta
	meta = yellow
	new = green
	old = red

[color "status"]
	added = green reverse
	changed = yellow reverse
	untracked = red reverse
	branch = magenta bold
	unmerged = red bold

[core]
	editor = vim
	eol = lf
	autocrlf = false

[pretty]
	# Check `man git-log` PRETTY FORMATS to see the placeholders
	custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s"

# Rewrites of repo paths
[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"

[url "git://github.com/"]
	insteadOf = "github:"

[user]
	name = "Ivan Gonzalez Polanco"
	email = "ivan14polanco@gmail.com"
